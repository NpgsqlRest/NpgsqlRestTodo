{
  "name": "npgsqlresttodo",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "upgrade": "bun upgrade",
    "update": "bun update && (cd worker && bun update)",
    "fix": "sudo chown -R $(whoami) ./",
    "watch": "bun --env-file=./config/.env ./config/build/rollup.build.js ./src/app --watch",
    "build": "bun --env-file=./config/.env ./config/build/rollup.build.js ./src/app",
    "refresh": "curl http://127.0.0.1:8080/npgsqlrest/refresh",
    "watch:admin": "bun --env-file=./config/.env ./config/build/rollup.build.js ./src/admin --watch",
    "build:admin": "bun --env-file=./config/.env ./config/build/rollup.build.js ./src/admin",
    "refresh:admin": "curl http://127.0.0.1:8081/npgsqlrest/refresh",
    "db-test": "bun pgmigrations run ./src/backend/TESTS/ --config=./config/migrations/pgmigrations.js --config=./config/migrations/pgmigrations.local.js",
    "db-up": "bun pgmigrations up --config=./config/migrations/pgmigrations.js --config=./config/migrations/pgmigrations.local.js",
    "db-list": "bun pgmigrations up --list --config=./config/migrations/pgmigrations.js --config=./config/migrations/pgmigrations.local.js",
    "db-dump": "bun pgmigrations up --dump --config=./config/migrations/pgmigrations.js --config=./config/migrations/pgmigrations.local.js",
    "db-schema": "bun pgmigrations schema --config=./config/migrations/pgmigrations.js --config=./config/migrations/pgmigrations.local.js",
    "db-history": "bun pgmigrations history --config=./config/migrations/pgmigrations.js --config=./config/migrations/pgmigrations.local.js",
    "db-config": "bun pgmigrations config --config=./config/migrations/pgmigrations.js --config=./config/migrations/pgmigrations.local.js",
    "psql": "bun pgmigrations psql --config=./config/migrations/pgmigrations.js --config=./config/migrations/pgmigrations.local.js"
  },
  "dependencies": {
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@tailwindcss/postcss": "^4.1.12",
    "@tsconfig/svelte": "^5.0.5",
    "daisyui": "^5.0.54",
    "dev": "^0.1.3",
    "lucide-svelte": "^0.525.0",
    "moment": "^2.30.1",
    "postcss": "^8.5.6",
    "rollup": "^4.49.0",
    "rollup-plugin-css-only": "^4.5.2",
    "rollup-plugin-svelte": "^7.2.3",
    "sass": "1.89.2",
    "svelte": "^5.38.6",
    "svelte-check": "^4.3.1",
    "svelte-preprocess": "^6.0.3",
    "tailwindcss": "^4.1.12",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@vbilopav/pgmigrations": "^0.43.0"
  }
}