{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "include": [
        "src/app/**/*", 
        "src/admin/**/*", 
        "src/_lib/**/*"
    ],
    "exclude": [
        ".claude/*",
        ".rollup.cache/*",
        ".vscode/*",
        "admin_dist/*",
        "app_dist/*",
        "config/*",
        "http/*",
        "logs/*",
        "node_modules/*",
        "src/backend/*",
        "worker/*"
    ],

    "compilerOptions": {
        "target": "ES2022",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": ".",
        "paths": {
            "$lib/*": ["src/_lib/*"],
        },
        "skipLibCheck": true,
        "types": ["svelte"],
        "verbatimModuleSyntax": true,
        "isolatedModules": true,
        "incremental": true,
        "tsBuildInfoFile": ".rollup.cache/tsconfig.tsbuildinfo",
    }
}
